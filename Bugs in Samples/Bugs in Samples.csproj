<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="IgniteUI.Blazor" Version="22.2.21" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Shared/MainLayout.razor.css" CssScope="master-view-scope" />
    <None Update="Pages/SpaceBetween.razor.css" CssScope="space-between-scope" />
    <None Update="Pages/CardsOpacity.razor.css" CssScope="cards-opacity-scope" />
    <None Update="Pages/CardActions.razor.css" CssScope="card-actions-scope" />
    <None Update="Pages/Dialog.razor.css" CssScope="dialog-scope" />
  </ItemGroup>

</Project>
